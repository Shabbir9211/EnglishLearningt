<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodayWordActivity">


<LinearLayout
    android:orientation="vertical"
  android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/TvEnglish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/TvEngWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TvEnglish"
        android:text="English words"
        android:textSize="40dp" />
    <TextView
        android:id="@+id/TvUrdu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urdu"
        android:textSize="40dp"
        android:layout_below="@+id/TvEngWords"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/TvUrduword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="urdu words"
        android:textSize="40dp"
        android:layout_below="@+id/TvUrdu"/>

</LinearLayout>


</RelativeLayout>